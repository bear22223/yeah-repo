<h1>タスク編集</h1>
<div class= "row">
  <div class= "col-md-8 col-md-offset-2">
    <%= form_with(model: @tasks, url: user_task_path(@user,@tasks), method: :patch, local: true) do |f| %>
      <%= render 'shared/error_messages', obj: @tasks %>
      
      <%= f.label :名称, class: "label-signup" %>
      <%= f.text_field :note_name, class: "form-control" %>
      
      <%= f.label :詳細, class: "label-signup" %>
      <%= f.text_area :note, class: "form-control", size: "70x5" %>
      
      <%= f.submit "更新", class: "btn btn-primary btn-form" %>
      <%= link_to "キャンセル", "#", class: "btn btn-default btn-form" %>
    <% end %>
  </div>
</div>


