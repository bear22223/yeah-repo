<h1>タスク新規作成</h1>
<div class= "row">
  <div class= "col-md-8 col-md-offset-2">
    <%= form_with(model: @tasks, url: user_tasks_path(@user), local: true, method: :post) do |f| %>
      <%= render 'shared/error_messages' %>
      
      <%= f.label :名称, class: "label-signup" %>
      <%= f.text_field :note_name, class: "form-control" %>
      
      <%= f.label :詳細, class: "label-signup" %>
      <%= f.text_area :note, class: "form-control", size: "70x5" %>
      
      <%= f.submit "新規登録", class: "btn btn-lg btn-primary btn-form" %>
    <% end %>
  </div>
</div>



